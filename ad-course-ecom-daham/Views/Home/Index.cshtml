<!-- Products -->
<section>
    <div class="container my-5">
        <header class="mb-4">
            <h3>New products</h3>
        </header>

        <div class="row">
            @foreach(var product in @ViewBag.computers)
            {
                <div class="col-lg-3 col-md-6 col-sm-6 d-flex">
                    <div class="card w-100 my-2 shadow-2-strong">
                        <img src="@product.cImage" class="card-img-top" style="aspect-ratio: 1 / 1" />
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.cName</h5>
                            <p class="card-text">Rs @decimal.Round(@product.normalPrice, 2, MidpointRounding.AwayFromZero)</p>
                            <form method="post" asp-controller="Home" asp-action="ViewSingleProduct">
                                <input type="text" style="display: none" class="form-control" name="comId" value="@product.comId" aria-describedby="emailHelp" placeholder="Enter computer name">
                                <button type="submit" class="btn btn-primary shadow-0 me-1">View Product</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
